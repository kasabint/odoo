<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
<!--        form view       -->
        <record id="view_branch_department_form" model="ir.ui.view">
            <field name="name">res.branch.department.form</field>
            <field name="model">res.branch.department</field>
            <field name="arch" type="xml">
                <form string="Branch">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
<!--        tree view       -->
        <record id="view_branch_department_tree" model="ir.ui.view">
            <field name="name">res.branch.department.tree</field>
            <field name="model">res.branch.department</field>
            <field name="arch" type="xml">
                <tree string="Branches" sample="1" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>
