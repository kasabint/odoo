<!--        View action for branch views        -->
        <record id="action_res_branch_departments" model="ir.actions.act_window">
            <field name="name">Branche Departments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.branch.department</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Branch Department
              </p><p>
                Create and manage branche departments for the companies that will be managed by Odoo from here.
              </p>
