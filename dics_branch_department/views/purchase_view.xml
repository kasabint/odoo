<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_form_inherit_departments" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.departments</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="multi_branch_base.view_purchase_order_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='branch_id']" position="after">
                    <field name="branch_department_ids" invisible="1"/>
                    <field name="branch_department_id" options="{'no_create': True}" domain="[('id', 'in', branch_department_ids)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
